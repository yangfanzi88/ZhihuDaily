<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_header_story_height"
    android:layout_marginBottom="8dp">

    <com.example.mvp_demo.widget.CirclePageIndicator xmlns:CirclePageIndicator="http://schemas.android.com/apk/res-auto"
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        CirclePageIndicator:fillColor="#ffffffff"
        CirclePageIndicator:pageColor="#9f888888"
        CirclePageIndicator:strokeWidth="0dp" />

    <com.example.mvp_demo.widget.MyViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>