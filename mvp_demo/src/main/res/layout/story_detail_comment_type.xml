<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/item_story_background_color">
    <TextView
        android:id="@+id/story_comment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="?attr/item_story_text_color"
        android:textSize="@dimen/text_size_14"
        />
    <ImageView
        android:id="@+id/story_comment_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:src="@mipmap/story_detail_comment_more"
        android:visibility="gone"
        />
</RelativeLayout>