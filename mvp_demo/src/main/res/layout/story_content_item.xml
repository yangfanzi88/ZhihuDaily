<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/story_content_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_4"
        android:layout_marginEnd="@dimen/spacing_10"
        android:layout_marginStart="@dimen/spacing_10"
        android:layout_marginTop="@dimen/spacing_8"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/item_story_background_color"
        app:cardCornerRadius="@dimen/spacing_4">

        <RelativeLayout
            android:id="@+id/story_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/spacing_8">

            <ImageView
                android:id="@+id/story_content_image"
                android:layout_width="@dimen/story_content_image"
                android:layout_height="@dimen/story_content_image"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:id="@+id/story_content_multiPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@mipmap/home_pic" />

            <TextView
                android:id="@+id/story_content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_8"
                android:layout_marginRight="@dimen/spacing_8"
                android:layout_toStartOf="@+id/story_content_image"
                android:gravity="center_vertical"
                android:textColor="?attr/item_story_text_color"
                android:textSize="@dimen/text_size_18" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>