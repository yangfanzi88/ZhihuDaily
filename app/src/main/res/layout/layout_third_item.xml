<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/spacing_10">

        <View
            android:layout_width="2dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:background="@drawable/vertical_line_red"/>

        <TextView
            android:id="@+id/third_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_10"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/gray_dark" />
    </LinearLayout>

    <com.aile.fanyangsz.zhihudaily.widget.ScrollGridView
        android:id="@+id/third_item_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_10"
        android:paddingRight="@dimen/spacing_10"
        android:paddingBottom="@dimen/spacing_4"
        android:horizontalSpacing="@dimen/spacing_10"
        android:scrollbars="none"
        android:numColumns="2">
    </com.aile.fanyangsz.zhihudaily.widget.ScrollGridView>

</LinearLayout>